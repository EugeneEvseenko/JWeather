<Page x:Class="JWeather.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JWeather"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1" Background="Black">

    <Grid Height="60">
        <Label Content="Time" HorizontalAlignment="Right" Margin="0,0,25,0" VerticalAlignment="Center" Foreground="White" FontFamily="Source Sans Pro Semibold" FontSize="16"/>
        <Label Content="Temperature" HorizontalAlignment="Left" Margin="15,5,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Source Sans Pro Semibold" FontSize="16"/>
        <Label Content="Humidity" HorizontalAlignment="Left" Margin="15,0,0,5" VerticalAlignment="Bottom" Foreground="White" FontFamily="Source Sans Pro Semibold" FontSize="16"/>
    </Grid>
</Page>
